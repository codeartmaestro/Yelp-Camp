<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Campground:</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="nameAdded" id="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageAdded" id="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="descriptionAdded" id="description"
                        placeholder="Description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>