<%- include("../partials/header") %>

<div class="container">
   <div class="row">
      <h1 style="text-align: center;">Edit Campground</h1>
      <div style="width: 30%; margin: 30px auto;">
         <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
            <div class="form-group">
               <input
                  class="form-control"
                  type="text"
                  name="edittedCampground[name]"
                  id="name"
                  value="<%= campground.name %>"
               />
            </div>
            <div class="form-group">
               <input
                  class="form-control"
                  type="text"
                  name="edittedCampground[image]"
                  id="image"
                  value="<%= campground.image %>"
               />
            </div>
            <div class="form-group">
               <input
                  class="form-control"
                  type="text"
                  name="edittedCampground[description]"
                  id="description"
                  value="<%= campground.description %>"
               />
            </div>
            <div class="form-group">
               <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
            </div>
         </form>

         <a href="/campgrounds">Go Back</a>
      </div>
   </div>
</div>

<%- include("../partials/footer") %>
